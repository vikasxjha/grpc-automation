<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="gRPC Test Automation Suite" parallel="tests" thread-count="5" verbose="1">

    <!-- Functional Tests -->
    <test name="Campaign Functional Tests" group-by-instances="true">
        <classes>
            <class name="com.mapbox.tests.functional.CampaignFunctionalTests"/>
        </classes>
    </test>

    <!-- Negative Tests -->
    <test name="Campaign Negative Tests" group-by-instances="true">
        <classes>
            <class name="com.mapbox.tests.negative.CampaignNegativeTests"/>
        </classes>
    </test>

    <!-- Contract Tests -->
    <test name="Campaign Contract Tests" group-by-instances="true">
        <classes>
            <class name="com.mapbox.tests.contract.CampaignContractTests"/>
        </classes>
    </test>

    <!-- Streaming Tests -->
    <test name="Campaign Streaming Tests" group-by-instances="true">
        <classes>
            <class name="com.mapbox.tests.streaming.CampaignStreamingTests"/>
        </classes>
    </test>

    <!-- Resiliency Tests -->
    <test name="Campaign Resiliency Tests" group-by-instances="true">
        <classes>
            <class name="com.mapbox.tests.resiliency.CampaignResiliencyTests"/>
        </classes>
    </test>

    <!-- Performance Tests -->
    <test name="Campaign Performance Tests" group-by-instances="true">
        <classes>
            <class name="com.mapbox.tests.performance.CampaignPerformanceTests"/>
        </classes>
    </test>

</suite>

